# Maintainer: Christian Krause ("wookietreiber") <kizkizzbangbang@googlemail.com>
pkgname=ncbi-blast
pkgver=2.2.29
pkgrel=1
pkgdesc="finds regions of similarity between biological sequences"
arch=('i686' 'x86_64')
url="http://blast.ncbi.nlm.nih.gov/Blast.cgi?CMD=Web&PAGE_TYPE=BlastHome"
license=('unknown')
depends=('lzo2' 'pcre' 'python')
makedepends=('cpio')
provides=('blast')
conflicts=('blast+-bin')
replaces=('blast+-bin')
source=("ftp://ftp.ncbi.nlm.nih.gov/blast/executables/blast+/$pkgver/$pkgname-$pkgver+-src.tar.gz")
md5sums=('1290360b24448dd79840a6800482b597')

build() {
	cd "$srcdir/$pkgname-$pkgver+-src/c++"
	./configure --prefix=/usr --with-dll --with-mt --without-gnutls
	make
}

package() {
	cd "$srcdir/$pkgname-$pkgver+-src/c++"
	make prefix="$pkgdir/usr/" install
	chmod +x $pkgdir/usr/lib/*.so
}
